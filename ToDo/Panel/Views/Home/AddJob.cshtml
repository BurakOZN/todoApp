@using ApiModels
@model Panel.Models.BaseResponse<object>
@{
    if (null != Model.Message)
    {
        <script type="text/javascript">
            alert("@Model.Message");
        </script>
    }
}
<form class="modal-content animate" method="post">
    <h1>Add Job</h1>
    <div class="container">
        <label for="Name"><b>Username</b></label>
        <input type="text" placeholder="Enter Name" name="Name" required>

        <label for="psw"><b>Description</b></label>
        <input type="text" placeholder="Enter Description" name="Description" required>

        <label for="psw"><b>StartDate</b></label>
        <input type="date" placeholder="Enter StartDate" name="StartDate" required>

        <label for="Type"><b>Type</b></label>
        <select name="Type">
            <option value="0">Daily</option>
            <option value="1">Weekly</option>
            <option value="2">Monthly</option>
        </select>

        <button type="submit" formaction="/Home/AddJob">Add</button>

    </div>
</form>